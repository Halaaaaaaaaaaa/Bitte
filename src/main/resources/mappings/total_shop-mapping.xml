<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="Total_shopMapper" >
	<!-- 쇼핑 메인화면 all 리스트 -->
	<select id="total_shopAllList" resultType="Total_shop">
		SELECT * FROM total_shop
	</select>
	
	<!-- 쇼핑 메인화면 카테고리별 리스트 -->
	<select id="total_shopList" resultType="Total_shop">
		SELECT * FROM total_shop 
		WHERE p_category = #{p_category}
	</select>
	
	<!-- 쇼핑 디테일 -->
	<select id="total_shopDetail" resultType="Total_shop">
		SELECT * FROM total_shop
		WHERE p_code = #{p_code}
	</select>

		
</mapper>